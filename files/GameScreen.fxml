<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" styleClass="background" stylesheets="@styles.css"
            xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="View.FXController" onKeyReleased="#keyReleased">
    <top>
        <Label styleClass="title" text="2048" BorderPane.alignment="CENTER"/>
    </top>
    <center>
        <VBox alignment="CENTER" BorderPane.alignment="CENTER">
            <AnchorPane styleClass="anchorPane" BorderPane.alignment="CENTER">
                <Button fx:id="restartButton" styleClass="startButton"
                        AnchorPane.bottomAnchor="15" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="85"
                        onAction="#startButtonClicked" text="START GAME">
                </Button>
                <Label fx:id="scores" styleClass="infoLabel" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="32.0"
                       text="Scores:">
                </Label>
                <Label styleClass="infoLabel" AnchorPane.bottomAnchor="23.6"
                       AnchorPane.rightAnchor="0.0" text="Record:">
                </Label>
            </AnchorPane>
            <StackPane styleClass="stackPane">
                <ImageView fitHeight="300.0" fitWidth="300.0">
                    <Image url="@field.png"/>
                </ImageView>
                <GridPane fx:id="gridPane" styleClass="gridPane" alignment="CENTER">
                    <columnConstraints>
                        <ColumnConstraints prefWidth="65.0"/>
                        <ColumnConstraints prefWidth="65.0"/>
                        <ColumnConstraints prefWidth="65.0"/>
                        <ColumnConstraints prefWidth="65.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints prefHeight="65.0"/>
                        <RowConstraints prefHeight="65.0"/>
                        <RowConstraints prefHeight="65.0"/>
                        <RowConstraints prefHeight="65.0"/>
                    </rowConstraints>
                </GridPane>
            </StackPane>
        </VBox>
    </center>
</BorderPane>
